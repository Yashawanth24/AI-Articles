<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= description %>">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- Adding the custom styles -->
</head>
<body>
  <header>
    <h1>Tech News Hub</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/category/smartphones">Smartphones</a>
      <a href="/category/wearables">Wearables</a>
    </nav>
  </header>
  <main class="container">
    <h1 class="main-title">Latest in Tech & AI</h1>
    <div class="article-grid">
        <% articles.forEach(article => { %>
            <article class="article-card">
                <div class="card-image">
                    <% if (article.image) { %>
                        <img src="<%= article.image %>" alt="<%= article.title %>">
                    <% } else { %>
                        <div class="placeholder-img">Tech News</div>
                    <% } %>
                    <span class="category-tag"><%= article.category %></span>
                </div>
                <div class="card-content">
                    <h2><%= article.title %></h2>
                    <p><%= article.summary.substring(0, 120) %>...</p>
                    <div class="card-footer">
                        <span class="date"><%= new Date(article.publishedAt).toLocaleDateString() %></span>
                        <a href="/article/<%= article.id %>" class="read-btn">Read AI Analysis &rarr;</a>
                    </div>
                </div>
            </article>
        <% }) %>
    </div>
</main>
</body>
</html>